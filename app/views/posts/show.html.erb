<%= stylesheet_link_tag "show" %>
<div class="post">
<h1 class="show_title">
    <%= @post.title %>
</h1>
<div class="show_text">
    <% if @post.image? %>
        <%=image_tag(@post.image, alt: "article image",class: "image")%>
        
    <% end %>
    <%= (h @post.text).gsub("\n","<br/>").html_safe %>
    <% if @post.image? %>
        <div class="mobile"><br>Image: <br><%=link_to @post.image, "#{@post.image}" %></div>
    <% end %>
</div>
</div>
<% if logged_in? %>
<p class="show_options">
<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", post_path(@post), :method => :delete %>
</p>
<% end %>